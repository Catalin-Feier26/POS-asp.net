@page
@model DashboardModel
@{
    ViewData["Title"] = "Server Dashboard";
}

<div class="card mt-5 shadow">
    <div class="card-body text-center">
        <h2 class="card-title">Server Dashboard</h2>
        <p class="card-text">Welcome, Server! Here you can manage tables, take orders, and handle billing.</p>
    </div>
</div>
<div class="col-md-4">
    <div class="card shadow h-100">
        <div class="card-body text-center d-flex flex-column">
            <h4 class="card-title">Manage Tables</h4>
            <p class="card-text">View, create, update, and delete tables.</p>
            <a asp-page="/Server/ManageTables" class="btn btn-primary mt-auto">Go to Manage Tables</a>
        </div>
    </div>
</div>
