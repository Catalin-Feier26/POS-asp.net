@page
@model DashboardModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12 mb-4">
            <div class="card shadow">
                <div class="card-body text-center">
                    <h2 class="card-title">Admin Dashboard</h2>
                    <p class="card-text">Welcome, Admin! Use this area to manage users, menu items, and view reports.</p>
                </div>
            </div>
        </div>

        <!-- Manage Users card -->
        <div class="col-md-4">
            <div class="card shadow h-100">
                <div class="card-body text-center d-flex flex-column">
                    <h4 class="card-title">Manage Users</h4>
                    <p class="card-text">View, create, update, and delete user accounts.</p>
                    <a asp-page="/Admin/ManageUsers" class="btn btn-primary mt-auto">Go to Manage Users</a>
                </div>
            </div>
        </div>

        <!-- You can add more cards here, like Menu Management or Reports -->
    </div>
</div>